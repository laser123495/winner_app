<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".fragments.HomeFragment">
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gifbg"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="128dp"
        android:layout_height="37dp"
        android:layout_marginTop="73dp"
        android:src="@drawable/winner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/imageButton_tebakgambar"
        android:layout_width="140dp"
        android:layout_height="148dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/menu1"
        android:background="#0000"
        android:scaleType="fitXY"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        android:outlineProvider="bounds"
        />

    <ImageButton
        android:outlineProvider="bounds"
        android:elevation="10dp"
        android:id="@+id/imageButton_perhitungan"
        android:layout_width="140dp"
        android:layout_height="148dp"
        android:layout_marginStart="25dp"
        android:background="#0000"
        android:scaleType="fitXY"
        android:src="@drawable/menu2"
        app:layout_constraintStart_toEndOf="@+id/imageButton_tebakgambar"
        app:layout_constraintTop_toTopOf="@+id/imageButton_tebakgambar" />

    <ImageButton
        android:outlineProvider="bounds"
        android:elevation="10dp"
        android:id="@+id/imageButton_puzzle"
        android:layout_width="140dp"
        android:layout_height="148dp"
        android:layout_marginTop="36dp"
        android:background="#0000"
        android:scaleType="fitXY"
        android:src="@drawable/menu3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_tebakgambar" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11dp"
        android:textColor="#000000"
        android:text="PERHITUNGAN"
        app:layout_constraintEnd_toEndOf="@+id/imageButton_perhitungan"
        app:layout_constraintStart_toStartOf="@+id/imageButton_perhitungan"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_perhitungan" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11dp"
        android:textColor="#000000"
        android:text="TEBAK GAMBAR"
        app:layout_constraintEnd_toEndOf="@+id/imageButton_tebakgambar"
        app:layout_constraintStart_toStartOf="@+id/imageButton_tebakgambar"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_tebakgambar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11dp"
        android:textColor="#000000"
        android:text="PUZZLE"
        app:layout_constraintEnd_toEndOf="@+id/imageButton_puzzle"
        app:layout_constraintStart_toStartOf="@+id/imageButton_puzzle"
        app:layout_constraintTop_toBottomOf="@+id/imageButton_puzzle" />
</androidx.constraintlayout.widget.ConstraintLayout>