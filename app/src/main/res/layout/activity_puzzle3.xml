<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/puzzlebg"
    tools:context=".puzzle3">


    <ImageButton
        android:id="@+id/back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="27dp"
        android:background="#0000"
        android:elevation="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Halo, namaku Matahari, Jarak antara aku dengan bumi adalah 150 juta km."
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView

        android:id="@+id/imageView13"
        android:layout_width="344dp"
        android:layout_height="291dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="148dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12"
        app:srcCompat="@drawable/ricefield" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/gjhbenar"
        android:layout_width="68dp"
        android:layout_height="69dp"
        android:layout_marginEnd="14dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:layout_constraintVertical_bias="0.089"
        app:srcCompat="@drawable/matahari" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rt" />

    <ImageButton
        android:id="@+id/tb2help"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="22dp"
        android:background="#0000"
        android:elevation="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/help_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/gajah"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:background="#0000"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/imageView13"
        app:srcCompat="@drawable/padi" />

    <ImageButton
        android:id="@+id/gajah2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#0000"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/gajah3"
        app:layout_constraintStart_toEndOf="@+id/gajah"
        app:layout_constraintTop_toTopOf="@+id/gajah"
        app:srcCompat="@drawable/pohon" />

    <ImageButton
        android:id="@+id/gajah3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#0000"
        android:scaleType="fitXY"
        android:elevation="30dp"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/gajah"
        app:srcCompat="@drawable/matahari" />


</androidx.constraintlayout.widget.ConstraintLayout>